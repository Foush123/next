{{!
    @template theme_next/course

    Next theme course template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * user - The current user object
    * course - The current course object
    * course_stats - Course statistics
}}

<div class="course-container animate-fade-in">
    <!-- Course Header -->
    <div class="course-header">
        <div class="course-header-content">
            <h1 class="course-title">{{course.fullname}}</h1>
            <p class="course-subtitle">{{course.summary}}</p>
            <div class="course-meta">
                <div class="course-meta-item">
                    <i class="fas fa-users"></i>
                    <span>{{course_stats.total_users}} enrolled</span>
                </div>
                <div class="course-meta-item">
                    <i class="fas fa-chart-line"></i>
                    <span>{{course_stats.completion_rate}}% completion rate</span>
                </div>
                <div class="course-meta-item">
                    <i class="fas fa-calendar"></i>
                    <span>Started {{#course}}{{#startdate}}{{startdate}}{{/startdate}}{{/course}}</span>
                </div>
            </div>
        </div>
        <div class="course-header-actions">
            <button class="btn btn-primary">
                <i class="fas fa-play"></i>
                Continue Learning
            </button>
            <button class="btn btn-ghost">
                <i class="fas fa-bookmark"></i>
                Bookmark
            </button>
        </div>
    </div>

    <!-- Course Progress -->
    <div class="course-progress-section">
        <div class="dashboard-card">
            <div class="card-header">
                <h3 class="card-title">Your Progress</h3>
                <span class="progress-percentage">75%</span>
            </div>
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-fill primary" style="width: 75%"></div>
                </div>
                <div class="progress-details">
                    <div class="progress-item">
                        <span class="progress-label">Completed Modules</span>
                        <span class="progress-value">6/8</span>
                    </div>
                    <div class="progress-item">
                        <span class="progress-label">Time Spent</span>
                        <span class="progress-value">12h 30m</span>
                    </div>
                    <div class="progress-item">
                        <span class="progress-label">Next Due</span>
                        <span class="progress-value">Assignment 3</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Content Grid -->
    <div class="course-content-grid">
        <!-- Main Content -->
        <div class="course-main-content">
            <div class="course-content">
                <div class="course-navigation">
                    <div class="nav-tabs">
                        <button class="nav-tab active" data-tab="overview">
                            <i class="fas fa-home"></i>
                            Overview
                        </button>
                        <button class="nav-tab" data-tab="modules">
                            <i class="fas fa-list"></i>
                            Modules
                        </button>
                        <button class="nav-tab" data-tab="assignments">
                            <i class="fas fa-tasks"></i>
                            Assignments
                        </button>
                        <button class="nav-tab" data-tab="discussions">
                            <i class="fas fa-comments"></i>
                            Discussions
                        </button>
                    </div>
                </div>

                <div class="tab-content">
                    <div class="tab-pane active" id="overview">
                        <div class="course-overview">
                            <h2>Course Overview</h2>
                            <p>Welcome to this comprehensive course designed to enhance your skills and knowledge. This course covers essential topics and provides hands-on experience through practical exercises.</p>
                            
                            <div class="course-objectives">
                                <h3>Learning Objectives</h3>
                                <ul class="objectives-list">
                                    <li><i class="fas fa-check"></i> Master fundamental concepts</li>
                                    <li><i class="fas fa-check"></i> Apply knowledge in real-world scenarios</li>
                                    <li><i class="fas fa-check"></i> Develop critical thinking skills</li>
                                    <li><i class="fas fa-check"></i> Collaborate effectively with peers</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="modules">
                        <div class="modules-list">
                            <div class="module-item">
                                <div class="module-header">
                                    <div class="module-icon">
                                        <i class="fas fa-play-circle"></i>
                                    </div>
                                    <div class="module-info">
                                        <h4 class="module-title">Introduction to the Course</h4>
                                        <p class="module-description">Get started with the fundamentals</p>
                                    </div>
                                    <div class="module-status completed">
                                        <i class="fas fa-check"></i>
                                    </div>
                                </div>
                                <div class="module-progress">
                                    <div class="progress-bar">
                                        <div class="progress-fill primary" style="width: 100%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="module-item">
                                <div class="module-header">
                                    <div class="module-icon">
                                        <i class="fas fa-video"></i>
                                    </div>
                                    <div class="module-info">
                                        <h4 class="module-title">Core Concepts</h4>
                                        <p class="module-description">Deep dive into the main topics</p>
                                    </div>
                                    <div class="module-status in-progress">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                </div>
                                <div class="module-progress">
                                    <div class="progress-bar">
                                        <div class="progress-fill primary" style="width: 60%"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="module-item">
                                <div class="module-header">
                                    <div class="module-icon">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    <div class="module-info">
                                        <h4 class="module-title">Advanced Topics</h4>
                                        <p class="module-description">Explore advanced concepts</p>
                                    </div>
                                    <div class="module-status locked">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                </div>
                                <div class="module-progress">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: 0%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="assignments">
                        <div class="assignments-list">
                            <div class="assignment-item">
                                <div class="assignment-header">
                                    <h4 class="assignment-title">Assignment 1: Research Paper</h4>
                                    <span class="assignment-due">Due: Dec 15, 2024</span>
                                </div>
                                <div class="assignment-status submitted">
                                    <i class="fas fa-check-circle"></i>
                                    Submitted
                                </div>
                            </div>

                            <div class="assignment-item">
                                <div class="assignment-header">
                                    <h4 class="assignment-title">Assignment 2: Group Project</h4>
                                    <span class="assignment-due">Due: Dec 22, 2024</span>
                                </div>
                                <div class="assignment-status in-progress">
                                    <i class="fas fa-clock"></i>
                                    In Progress
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane" id="discussions">
                        <div class="discussions-list">
                            <div class="discussion-item">
                                <div class="discussion-header">
                                    <h4 class="discussion-title">Weekly Discussion: Course Topics</h4>
                                    <span class="discussion-posts">15 posts</span>
                                </div>
                                <div class="discussion-latest">
                                    <span class="latest-post">Latest: 2 hours ago</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        {{#hasblocks}}
        <div class="course-sidebar">
            <div class="sidebar-blocks">
                {{{sidepreblocks}}}
            </div>
            <div class="sidebar-blocks">
                {{{sidepostblocks}}}
            </div>
        </div>
        {{/hasblocks}}
    </div>
</div>

<style>
.course-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.5rem;
}

.course-header {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    padding: 3rem;
    border-radius: 1rem;
    margin-bottom: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.course-header-content {
    flex: 1;
}

.course-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
}

