}

.objectives-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0;
}

.objectives-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(226, 232, 240, 0.5);
}

.objectives-list li:last-child {
    border-bottom: none;
}

.objectives-list li i {
    color: #10b981;
    font-size: 0.875rem;
}

.modules-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.module-item {
    background: rgba(255, 255, 255, 0.9);
