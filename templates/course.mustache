    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

.module-icon {
    width: 48px;
    height: 48px;
    border-radius: 0.75rem;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
