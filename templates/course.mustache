    flex: 1;
}

.module-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: #1e293b;
}

.module-description {
    font-size: 0.875rem;
    color: #64748b;
    margin: 0;
}

.module-status {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.module-status.completed {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.module-status.in-progress {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}

.module-status.locked {
    background: rgba(100, 116, 139, 0.1);
    color: #64748b;
}

.module-progress {
    margin-top: 1rem;
}

.assignments-list,
.discussions-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.assignment-item,
.discussion-item {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 0.75rem;
    padding: 1.5rem;
    border: 1px solid rgba(226, 232, 240, 0.5);
    transition: all 0.3s ease;
}

.assignment-item:hover,
.discussion-item:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.assignment-header,
.discussion-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
}

.assignment-title,
.discussion-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    color: #1e293b;
}

.assignment-due {
    font-size: 0.875rem;
    color: #64748b;
}

.assignment-status {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.assignment-status.submitted {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.assignment-status.in-progress {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
}

.course-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.sidebar-blocks {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

@media (max-width: 1024px) {
    .course-content-grid {
        grid-template-columns: 1fr;
    }
    
    .course-sidebar {
        order: -1;
    }
}

@media (max-width: 768px) {
    .course-header {
        flex-direction: column;
        gap: 2rem;
    }
    
    .course-header-actions {
        width: 100%;
        justify-content: stretch;
    }
    
    .nav-tabs {
        flex-direction: column;
    }
    
    .course-meta {
        flex-direction: column;
        gap: 1rem;
    }
}
</style>
